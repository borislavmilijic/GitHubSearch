<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/linearLayout"
        android:clickable="false" android:background="#24292e">

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:srcCompat="@tools:sample/avatars[6]"
            android:id="@+id/avatar"
            android:scaleType="centerCrop"
            android:contentDescription="@string/owner_avatar"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/owner"
            android:layout_width="230dp"
            android:layout_height="33dp"
            android:id="@+id/repo_owner"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintStart_toEndOf="@+id/avatar"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"/>
    <TextView
            android:text="@string/title"
            android:layout_width="341dp"
            android:layout_height="49dp"
            android:id="@+id/repo_name"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/avatar" android:textColor="@color/primary_white"/>
    <TextView
            android:text="@string/description"
            android:layout_width="341dp"
            android:layout_height="45dp"
            android:id="@+id/repo_description"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/repo_name"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:textColor="@android:color/white"/>
    <TextView
            android:layout_width="88dp"
            android:layout_height="19dp"
            android:text="@string/description_fix"
            android:ems="10"
            android:id="@+id/fix1"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="136dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/primary_blue"/>
    <TextView
            android:layout_width="84dp"
            android:layout_height="17dp"
            android:text="@string/repo_name"
            android:ems="10"
            android:id="@+id/fix2"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/primary_blue"/>
    <TextView
            android:layout_width="86dp"
            android:layout_height="18dp"
            android:text="@string/repo_owner"
            android:ems="10"
            android:id="@+id/fix"
            app:layout_constraintStart_toEndOf="@+id/avatar"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/primary_blue"/>


</androidx.constraintlayout.widget.ConstraintLayout>
